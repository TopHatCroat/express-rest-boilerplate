{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "baseUrl": "./src",
        "target": "es6",
        "outDir": "./dist",
        "moduleResolution": "Node",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
} 
